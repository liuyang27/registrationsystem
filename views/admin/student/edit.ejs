<!DOCTYPE html>
<html class='no-js' lang='en'>
  <head>
    <meta charset='utf-8'>
    <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
    <title>Dashboard</title>
    <link href="/css/application-a07755f5.css" rel="stylesheet" type="text/css" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    
  </head>
  <body class='main page'>
      <!-- Navbar -->
      <% include ../shared/header.ejs %>
      <!-- Sidebar -->
      <% include ../shared/sidebar.ejs %>
      <!-- Tools -->
      <section id='tools'>
        <ul class='breadcrumb' id='breadcrumb'>
            <li class='title'>Student List</li>
            <li><a href="/admin/student/import">Import</a></li>
        </ul>
        <div id='toolbar'>
          <div class='btn-group'>
            <a class='btn' data-toggle='toolbar-tooltip' href='#' title='Building'>
              <i class='icon-building'></i>
            </a>
            <a class='btn' data-toggle='toolbar-tooltip' href='#' title='Laptop'>
              <i class='icon-laptop'></i>
            </a>
            <a class='btn' data-toggle='toolbar-tooltip' href='#' title='Calendar'>
              <i class='icon-calendar'></i>
              <span class='badge'>3</span>
            </a>
            <a class='btn' data-toggle='toolbar-tooltip' href='#' title='Lemon'>
              <i class='icon-lemon'></i>
            </a>
          </div>
        
        </div>
      </section>
      <!-- Content -->
      <div id='content'>
        <div class='panel panel-default'>
          <div class='panel-heading'>
            Edit Student
          </div>
          <div class='panel-body'>
            <!-- <iframe src="/template/studentform.html" frameborder="0" width="1000"></iframe> -->
            <form id="fileform" action="#" enctype="multipart/form-data" method="POST">
                <div class="row col-md-12">
                  <div class="form-group col-md-1">
                    <label for="uname">ID</label>
                  </div>
                  <div class="form-group col-md-5">
                      <p><input type="text" class="form-control" name="sid"  placeholder="Enter student ID" value="<%= info.sid%>" readonly></p>
                  </div> 
                </div>
                 
                 
                <div class="row col-md-12">
                  <div class="form-group col-md-1">
                    <label for="name">Name</label>
                  </div>
                  <div class="form-group col-md-5">
                    <input type="text" class="form-control" name="name"  placeholder="Enter name" value="<%= info.name%>">
                  </div>   
                </div>
              
                <div class="row col-md-12">
                  <div class="form-group col-md-1">
                    <label for="grade">Grade</label>
                  </div>
                  <div class="form-group col-md-5">
                    <input type="number" class="form-control" name="grade"  placeholder="Enter grade" value="<%= info.grade%>">
                  </div>   
                </div>

                <div class="row col-md-12">
                    <div class="form-group col-md-1">
                      <label for="pwd">Password</label>
                    </div>
                    <div class="form-group col-md-5">
                      <input type="text" class="form-control" name="password"  placeholder="Enter password" value="<%= info.password%>">
                    </div>   
                </div>
              
                <div class="row col-md-12">
                  <div class="form-group col-md-1">
                    
                  </div>
                  <div class="form-group col-md-5">
                    <button type="submit" class="btn btn-primary" id="btn">Submit</button>
                  </div>
                </div>
              </form>
          </div>
        </div>
      </div>
    </div>
  	<script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script type="text/javascript">
       $("#btn").click(function(){
            var sid = parseInt($("input[name=sid]").val());
            $.post("/student/"+sid,{       
                name:$("input[name=name]").val(),
                grade:$("input[name=grade]").val(),
                password:$("input[name=password]").val(),
            },function(data){
                if(data.results==1){
                    alert("changed ok");
                    window.location="/";
                }else{
                    alert("something wrong..");
                }
            })
      
        })
    </script>
  </body>
</html>
